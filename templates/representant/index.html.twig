{% extends 'base-admin.html.twig' %}

{% block title %}Representant index{% endblock %}

{% block body %}
    <h1>Liste des représentant entreprise</h1>
    <a href="{{ path('representant_export') }}">Exporter liste des représentants</a><br>

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Entreprise</th>
                <th>Email</th>
                <th>Telephone</th>
                <th>Fonction</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for representant in representants %}
            <tr>
                <td>{{ representant.nom }}</td>
                <td>{{ representant.prenom }}</td>
                <td>{{ representant.entreprise ? representant.entreprise.societe : 'Non défini' }}</td>
                <td>{{ representant.email }}</td>
                <td>{{ representant.telephone }}</td>
                <td>{{ representant.fonction }}</td>
                <td>
                    <a href="{{ path('representant_show', {'id': representant.id}) }}" class="btn btn-info" title="Détails"><i class="fas fa-eye"></i></a>
                    <a href="{{ path('representant_edit', {'id': representant.id}) }}" class="btn btn-warning" title="Modifier"><i class="fas fa-pencil-alt"></i></a>
                    {{ include('representant/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('representant_new') }}" class="btn btn-success"><i class="fas fa-plus-circle"></i> Ajouter un représentant de l'entreprise</a>
{% endblock %}
