{% extends 'base-admin.html.twig' %}

{% block title %}Liste des étudiants{% endblock %}

{% block body %}
    <h1>Liste des étudiants</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Prénom</th>
                <th>N° Etudiant</th>
                <th>Diplôme</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for etudiant in etudiants %}
            <tr>
                <td>{{ etudiant.nom }}</td>
                <td>{{ etudiant.prenom }}</td>
                <td>{{ etudiant.numetudiant }}</td>
                <td>{{ etudiant.diplome.libelle }}</td>
                <td>
                    <a href="{{ path('admEtudiant_show', {'id': etudiant.id}) }}" class="btn btn-info"
                       title="Détails"><i class="fas
                    fa-eye"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
