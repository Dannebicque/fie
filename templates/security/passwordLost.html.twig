{% extends 'base.html.twig' %}


{% block content %}
    <div class="card card-round card-shadowed px-50 py-30 w-400px mb-0" style="max-width: 100%">
        <h5 class="text-uppercase">{{ 'password_lost'|trans }}</h5>
        <br>

        <form class="form-type-material" method="POST" action="{{ path('security_password_lost') }}">
            <input type="hidden" name="token" value="{{ csrf_token('password-lost') }}"/>
            <div class="form-group">
                <input type="text" class="form-control" id="email" name="email">
                <label for="email">{{ 'email.address'|trans }}</label>
            </div>

            <br>
            <button class="btn btn-bold btn-block btn-primary" type="submit">{{ 'reset'|trans }}</button>
        </form>
    </div>
{% endblock %}

{% block header %}

{% endblock %}

